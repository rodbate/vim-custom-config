set nocompatible
syntax on
filetype on
filetype plugin on
filetype indent on
set hidden
set tabstop=4
set expandtab
set shiftwidth=4
set softtabstop=-1
set encoding=utf8
set backspace=indent,eol,start
set number
set relativenumber
set completeopt=menuone,longest

set hlsearch
set incsearch
set ignorecase
set smartcase

set updatetime=300
set shortmess+=c


" Auto indent
set ai
" Smart indent
set si
set wrap

set scrolloff=5
set wildmenu

" Set to auto read when a file is changed from the outside
set autoread
au FocusGained,BufEnter * checktime

let mapleader = ","

inoremap jk <ESC>

" Fast saving
nmap <leader>w :w!<cr>

nmap <leader>q :q<cr>
nmap <leader>qw :qw<cr>

" Window Navigation with Ctrl-[hjkl]
noremap <C-j> <C-W>j
noremap <C-k> <C-W>k
noremap <C-h> <C-W>h
noremap <C-l> <C-W>l

nnoremap J 5j
nnoremap K 5k

" copy to outer vim and paste from outer vim
vnoremap <C-c> "+y
nnoremap <C-l> "+P

" clear highlight
nnoremap <silent> hc :noh<cr>

" Move a line of text using ALT+[jk]
nnoremap <silent> <leader>j :m+<CR>==
nnoremap <silent> <leader>k :m-2<CR>==
inoremap <silent> <leader>j <Esc>:m .+1<CR>==gi
inoremap <silent> <leader>k <Esc>:m .-2<CR>==gi
vnoremap <silent> <leader>j :m '>+1<CR>gv=gv
vnoremap <silent> <leader>k :m '<-2<CR>gv=gv

" Map auto complete of (, ", ', [
inoremap $1 ()<esc>i
inoremap $2 []<esc>i
inoremap $3 {}<esc>i
inoremap $4 {<esc>o}<esc>O
inoremap $q ''<esc>i
inoremap $e ""<esc>i

" switch tabs
nnoremap <S-tab> :tabprevious<CR>                                                                            
nnoremap <tab> :tabnext<CR>

" intellij config
" actionlist: find actions
nnoremap ;e :action SearchEverywhere<CR>
nnoremap ;g :action FindInPath<CR>
nnoremap ;s :action FileStructurePopup<CR>

nnoremap gd :action GotoDeclaration<CR>
nnoremap gs :action GotoSuperMethod<CR>
nnoremap gi :action GotoImplementation<CR>
nnoremap gb :action JumpToLastChange<CR>

nnoremap U :action FindUsages<CR>
nnoremap R :action RenameElement<CR>

nnoremap == :action ReformatCode<CR>
vnoremap == :action ReformatCode<CR>

nnoremap cc :action CommentByLineComment<CR>
vnoremap cc :action CommentByLineComment<CR>

nnoremap cb :action CommentByBlockComment<CR>
vnoremap cb :action CommentByBlockComment<CR>

nnoremap pb :action Back<CR>

nnoremap tt :action Annotate<CR>
